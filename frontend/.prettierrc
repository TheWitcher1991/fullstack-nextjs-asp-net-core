{
  "trailingComma": "all",
  "tabWidth": 4,
  "useTabs": true,
  "semi": false,
  "jsxSingleQuote": true,
  "singleQuote": true,
  "arrowParens": "avoid",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^~widgets/(.*)$",
    "^~features/(.*)$",
    "^~providers/(.*)$",
    "^~models/(.*)$",
    "^~packages/(.*)$",
    "^~public/(.*)$",
    "^./(.*)",
    "(.css)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ]
}
