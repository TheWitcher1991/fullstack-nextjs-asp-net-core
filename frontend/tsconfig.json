{
  "extends": [
    "nextjs.json",
    "@gravity-ui/tsconfig/tsconfig"
  ],
  "compilerOptions": {
    "paths": {
      "~*": ["./src/*"],
      "~public/*": ["./public/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
